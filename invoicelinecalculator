print(" The Invoice Line Calculator")


def get_price():
    while True:
        try:
            price = float(input("Enter price: "))
            return price
        except ValueError:
            print("Invalid price format. Please enter a valid price.")

def get_quantity():
    while True:
        try:
            quantity = int(input("Enter quantity: "))
            return quantity
        except ValueError:
            print("Invalid quantity format. Please enter a valid quantity.")

def compute_total(price, quantity):
    return price * quantity

def main():
    while True:
        price = get_price()
        quantity = get_quantity()
        total = compute_total(price, quantity)
        
        print("PRICE: {:.2f}".format(price))
        print("QUANTITY:", quantity)
        print("TOTAL: {:.2f}".format(total))
        
        choice = input("Enter another line item? (y/n): ")
        if choice.lower() != 'y':
            break

main()
